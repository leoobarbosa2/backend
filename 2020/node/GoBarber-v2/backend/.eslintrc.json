{
  "env": {
      "es6": true,
      "node": true
  },
  "extends": ["airbnb-base",
    "plugin:@typescript-eslint/recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended"],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
  },
  "plugins": ["prettier"],
  "parserOptions": {
      "ecmaVersion": 2018,
      "sourceType": "module"
  },
  "rules": {
    "class-methods-use-this": "off",
    "prettier/prettier": "error",
    "import/extensions": [
     "error",
     "ignorePackages",
     {
       "ts": "never"
     }
   ]
 },
 "settings": {
   "import/resolver": {
     "typescript": {}
   }
 }
}
